<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="space.collabify.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="space.collabify.android.activities.LoginScreenActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/label_collabify_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Needed for spotify login to work -->
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="space.collabify.android.activities.CollabifierSettingsActivity"
            android:label="CollabifierSettings" />

        <!-- need 2 new activities for settings? -->
        <activity
            android:name="space.collabify.android.activities.DjSettingsActivity"
            android:label="DjSettingsActivity" />

        <activity
            android:name="space.collabify.android.activities.AboutActivity"
            android:label="AboutActivity" />

        <activity
            android:name="space.collabify.android.activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/label_settings" />


        <!-- Mode Activities-->
        <activity
            android:name="space.collabify.android.activities.CreateEventActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/label_create_event" >
        </activity>

        <activity
          android:name="space.collabify.android.activities.JoinEventActivity"
          android:screenOrientation="portrait"
          android:configChanges="keyboardHidden|orientation|screenSize"
          android:label="@string/label_join_event" >
        </activity>

        <!-- Tab Activites-->
        <activity
            android:name="space.collabify.android.activities.CollabifierActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/label_collabifier" />

        <activity
            android:name="space.collabify.android.activities.DjActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/label_dj" />

        <!-- make for sending search string in an intent -->
        <activity android:name="space.collabify.android.activities.DetailedSearchActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>


        <!-- only for testing fragments -->
        <activity
            android:name="space.collabify.android.test.TestFragmentActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"/>


        <!-- Fragments -->
        <fragment
          android:name=".fragments.CollabifierPlayerFragment"
          android:label="@string/label_collabifier_player" />
        <fragment
          android:name=".fragments.PlaylistFragment"
          android:label="@string/label_playlist" />
        <fragment
          android:name=".fragments.DjTracksFragment"
          android:label="@string/label_dj_tracks" />
        <fragment
          android:name=".fragments.UserListFragment"
          android:label="@string/label_user_list" />
    </application>

</manifest>
