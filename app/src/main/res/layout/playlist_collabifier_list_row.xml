<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/playlist_collabifier_album_art"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView android:id="@+id/playlist_collabifier_song_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/playlist_collabifier_album_art"
        android:layout_centerInParent="true"
        android:text="collabifier list row"/>

    <space.collabify.collabify.controls.ImageToggleButton
        android:id="@+id/playlist_collabifier_upvote_button"
        android:layout_toLeftOf="@+id/playlist_collabifier_downvote_button"
        android:layout_alignParentTop="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:textOn=""
        android:textOff=""
        app:checkedSrc="@drawable/upvote_checked"
        app:uncheckedSrc="@drawable/upvote_icon" />

    <space.collabify.collabify.controls.ImageToggleButton
        android:id="@+id/playlist_collabifier_downvote_button"
        android:layout_toLeftOf="@+id/playlist_collabifier_delete_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:textOn=""
        android:textOff=""
        app:checkedSrc="@drawable/downvote_checked"
        app:uncheckedSrc="@drawable/downvote_icon"   />

    <ImageButton android:id="@+id/playlist_collabifier_delete_button"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/delete"/>



</RelativeLayout>