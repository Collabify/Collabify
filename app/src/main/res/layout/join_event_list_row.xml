<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView android:id="@+id/join_event_row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some text"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/join_event_row_image"
        android:layout_toStartOf="@+id/join_event_row_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"/>

    <ImageView android:id="@+id/join_event_row_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/lock_icon_white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


</RelativeLayout>