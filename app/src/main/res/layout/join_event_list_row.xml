<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView android:id="@+id/join_event_row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_name_row"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/join_event_row_image"
        android:layout_toStartOf="@+id/join_event_row_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"/>

    <ImageView android:id="@+id/join_event_row_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/lock_100"
        android:contentDescription="@string/join_event_lock_icon"
        android:layout_alignTop="@+id/join_event_row_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>


</RelativeLayout>