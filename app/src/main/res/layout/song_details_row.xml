<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/song_details_album_art"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_album"
        android:background="#ff444444"
        android:layout_margin="5dp"/>

    <TextView android:id="@+id/song_row_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"

        android:text="title"
        android:layout_alignTop="@+id/song_details_album_art"
        android:layout_toRightOf="@+id/song_details_album_art"
        android:layout_toLeftOf="@+id/song_row_add"
        android:layout_toStartOf="@+id/song_row_add"
        android:paddingTop="2dp"/>

  <TextView android:id="@+id/song_row_artist"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"

            android:text="artist"
            android:layout_alignBottom="@+id/song_details_album_art"
            android:layout_alignLeft="@+id/song_row_title"
            android:layout_alignStart="@+id/song_row_title"
            android:layout_alignRight="@+id/song_row_title"
            android:layout_alignEnd="@+id/song_row_title"
            android:paddingTop="2dp"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/song_row_add"
        android:src="@drawable/ic_add"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>