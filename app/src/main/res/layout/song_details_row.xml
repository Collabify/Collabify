<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/song_details_album_art"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/test_album_art"
        android:layout_margin="5dp"/>

    <TextView android:id="@+id/song_row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"

        android:layout_alignTop="@+id/song_details_album_art"
        android:layout_toRightOf="@+id/song_details_album_art"
        android:layout_toLeftOf="@+id/song_row_add"
        android:layout_toStartOf="@+id/song_row_add"
        android:layout_alignBottom="@+id/song_details_album_art" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/song_row_add"
        android:src="@drawable/ic_menu_add"
        android:layout_alignBottom="@+id/song_details_album_art"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_margin="5dp"/>

</RelativeLayout>